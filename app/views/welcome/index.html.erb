<% if current_user %>
  <div class="jumbotron">
    <h1>Welcome: <%= current_user.email %></h1>
  </div>
<% else %>
  <div class='jumbotron'>
    <h1>Photo Widget-App</h1>
    <div class='jumbotron-text'>
      <h3>Manage all your photos online</h3>
      <h5>Sign up below to get started</h5>
     </div>
  </div>

  <div class="row">
    <div class="plans clearfix">
      <div class=" well col-lg-4 col-lg-offset-2 plan">
        <h2>Premium Plan</h2>
        <div class="price pull-right">
            Price: $10
        </div>
        <div class="features">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li>Limited Project</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
        </p>
      </div>
        <div class="well col-lg-4 plan">
          <h2>Amaze Plan</h2>
            <div class="price pull-right">
              Price: $20
            </div>
            <div class="features">
              <ul>
                <li>Unlimited Image Uploads</li>
                <li>Responsive design</li>
                <li>Access anywhere</li>
                <li class='extra'>Unlimited projects</li>
              </ul>
            </div>
          <p>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
          </p>
        </div>
      </div>
    </div>
<% end %>

